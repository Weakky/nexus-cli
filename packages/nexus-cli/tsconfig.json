{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2015", "esnext.asynciterable", "es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/lib/tsnd/*.js"
  ],
  "exclude": ["node_modules"]
}
